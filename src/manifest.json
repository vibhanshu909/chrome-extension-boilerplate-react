{
  "manifest_version": 2,
  "name": "Chrome Extension with React & Webpack",
  "options_page": "options.html",
  "background": {
    "persistent": true,
    "scripts": ["background.bundle.js"]
  },
  "browser_action": {
    "default_icon": "icon-128.png",
    "default_title": "Modify Headers for Google Chromeâ„¢"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "<all_urls>"],
      "js": ["contentScript.bundle.js"],
      "css": ["content.styles.css"]
    }
  ],
  "devtools_page": "devtools.html",
  "permissions": [
    "http://*/*",
    "https://*/*",
    "storage",
    "unlimitedStorage",
    "contextMenus",
    "cookies",
    "tabs",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "activeTab",
    "\u003Call_urls>"
  ]
}
